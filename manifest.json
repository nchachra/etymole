{
  "manifest_version": 2,

  "name": "Etymole",
  "description": "Display top 2 results from etymonline.com",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon128.png",
    "default_popup": "popup.html",
    "default_title": "Etymole"
  },

  "background": {
    "scripts": ["js/bg.js"],
    "persistent": true
  },

  "permissions": [
    "*://*/*"
  ],

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
